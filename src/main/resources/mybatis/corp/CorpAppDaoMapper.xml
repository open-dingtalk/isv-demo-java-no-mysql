<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dingtalk.isv.access.biz.suite.dao.CorpAppDao">

    <resultMap type="com.dingtalk.isv.access.biz.suite.model.CorpAppDO" id="corpAppMap">
        <id property="id" column="id" />
        <result property="gmtCreate" column="gmt_create" />
        <result property="gmtModified" column="gmt_modified" />
        <result property="corpId" column="corp_id" />
        <result property="appId" column="app_id" />
        <result property="agentId" column="agent_id" />
        <result property="agentName" column="agent_name" />
        <result property="logoUrl" column="logo_url" />
    </resultMap>

    <sql id="select-all-fields">
        id,
        gmt_create,
        gmt_modified,
        corp_id,
        app_id,
        agent_id,
        agent_name,
        logo_url
    </sql>

    <insert id="saveOrUpdateCorpApp" useGeneratedKeys="true" keyProperty="id">
        insert into isv_corp_app (
                gmt_create,
                gmt_modified,
                corp_id,
                app_id,
                agent_id,
                agent_name,
                logo_url
        )values(
                now(),
                now(),
                #{corpId},
                #{appId},
                #{agentId},
                #{agentName},
                #{logoUrl}
        )ON DUPLICATE KEY UPDATE gmt_modified=now(),agent_id=#{agentId},agent_name=#{agentName},logo_url=#{logoUrl}
    </insert>

    <select id="getCorpApp" resultMap="corpAppMap">
           select <include refid="select-all-fields"/> from isv_corp_app
        <![CDATA[
			WHERE corp_id=#{corpId} AND app_id=#{appId}
		 ]]>
    </select>

    <select id="getAllCorpApp" resultMap="corpAppMap">
        SELECT <include refid="select-all-fields"/>   FROM isv_corp_app
    </select>

    <delete id="deleteCorpApp">
        delete from isv_corp_app
        <![CDATA[
			WHERE corp_id=#{corpId} AND app_id=#{appId}
		 ]]>
    </delete>


</mapper>